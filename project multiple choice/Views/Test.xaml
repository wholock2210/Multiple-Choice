<UserControl x:Class="project_multiple_choice.Views.Test"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:project_multiple_choice.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Style="{StaticResource Page_Style}"
             Loaded="UserControl_Loaded">
    <Grid>
        <Border Background="#f7f6f9" 
                CornerRadius="0,20,20,0"
/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Name="InfoSide">
                <ScrollViewer>
                    <StackPanel>
                        <Border Margin="10 50 10 0" Background="White"
                                CornerRadius="15">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Exam.ExamInfo.Name}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           TextWrapping="WrapWithOverflow"
                                           TextAlignment="Center"/>
                                <TextBlock Text="Thời gian còn lại"
                                           Margin="0 20"
                                           FontSize="16"/>
                            </StackPanel>
                        </Border>
                        <Border Margin="10 20" Background="White"
                                CornerRadius="15">
                            <StackPanel Name="splistPartExam"
                                        Margin="10">
                                <TextBlock Text="Danh sách phần thi"
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                                
                            </StackPanel>
                        </Border>
                        <Border Margin="10 20" Background="White"
                                CornerRadius="15">
                            <Button Name="btnSubmit"
                                    Click="btnSubmit_Click">Nộp bài</Button>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <!--main side-->
            <Grid Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel Margin="10 50 10 10"
                                Name="spMainQuestion">
                        <StackPanel.Resources>
                            <Style TargetType="Border">
                                <Setter Property="Margin" Value="0 20"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Margin" Value="10"/>
                            </Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
                            </Style>
                        </StackPanel.Resources>
                        
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Column="2">
                <Border Margin="10 50 10 10"
                        CornerRadius="15"
                        Background="White">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <TextBlock FontSize="25"
                                       TextWrapping="WrapWithOverflow"
                                       TextAlignment="Center"
                                       Margin="0 15">
                                Danh sách câu hỏi
                            </TextBlock>
                            <WrapPanel HorizontalAlignment="Center"
                                       Name="wpListQuestionNumber">
                            </WrapPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
        <Grid Name="congratulations" Visibility="Collapsed">
            <Border Width="300"
                    Height="400"
                    CornerRadius="15"
                    Background="Wheat">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="Chúc Mừng!"
               FontSize="20"
               TextAlignment="Center"
               FontWeight="Bold"
               Margin="0 10 0 0"/>
                        <Image Source="/Resources/good.png"
           Margin="5 10 5 5"
           Stretch="Uniform"/>
                        <TextBlock Text="Bạn đã hoàn thành bài thi với số điểm"
               TextAlignment="Center"
               FontSize="16"/>
                        <TextBlock Text="100"
               FontSize="20"
               FontWeight="SemiBold"
                 TextAlignment="Center"
                                   Name="score"/>
                        <TextBlock Text="Chúng tôi tự hào về bạn"
               FontSize="16"
               TextAlignment="Center"/>
                        <TextBlock Text="đó là khi mày đạt 100 điểm. còn điểm 2 chữ số thì mày là một thằng ngu"
               FontSize="6"
               TextAlignment="Center"/>

                    </StackPanel>
                    <WrapPanel VerticalAlignment="Bottom">
                        <Button 
         Margin="10"
         Name="btnConfirm"
         Command="{Binding DataContext.HomeCommand, RelativeSource={RelativeSource AncestorType=Window}}">Hẹ Hẹ Hẹ</Button>
                        <Button Name="btnWatchAwser"
                                Click="btnWatchAwser_Click">xem đáp án</Button>
                    </WrapPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
